---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

import authorImage from "@/assets/images/logan.jpg";

import { getLocaleFromUrl } from "@js/localeUtils";
import { useTranslations } from "@js/translationUtils";

const currLocale = getLocaleFromUrl(Astro.url);
const t = useTranslations(currLocale);

interface AboutItem {
	title: string;
	description: string;
	icon: string;
}

const aboutItems: AboutItem[] = [
	{
		title: t("aboutme_1"),
		description: t("aboutme_1_description"),
		icon: "tabler/user-group",
	},
	{
		title: t("aboutme_2"),
		description: t("aboutme_2_description"),
		icon: "tabler/wrench-hammer",
	},
	{
		title: t("aboutme_3"),
		description: t("aboutme_3_description"),
		icon: "tabler/shield",
	},
	{
		title: t("aboutme_4"),
		description: t("aboutme_4_description"),
		icon: "tabler/lecture",
	},
];
---

<section id="about" class="bg-background text-foreground overflow-hidden py-16 md:py-32 dark:border-y border-y">
	<div class="container mx-auto max-w-auto p-4 md:p-6">
		<div class="mx-auto max-w-8xl">
			<div class="grid items-center gap-12 lg:grid-cols-2 lg:gap-20">
				<div class="order-2 lg:order-1">
					<div data-aos="fade-right" data-aos-trigger="#about">
						<h2 class="h2 mb-6">{t("aboutme_title")}</h2>
						<p class="description text-lg mb-12 leading-relaxed">
							{t("aboutme_description")}
						</p>
					</div>
					<div class="grid gap-6 md:grid-cols-2">
						{
							aboutItems.map((item, idx) => (
								<div
									class="dark:bg-base-900 group hover:border-primary/30 hover:shadow-primary/5 rounded-xl border bg-white p-6  hover:shadow-lg"
									data-aos="fade-in"
									data-aos-trigger="#about"
									data-aos-delay={0.8 + idx * 0.2}
								>
									<Icon name={item.icon} class="text-primary h-8 w-8" />
									<h3 class="text-foreground group-hover:text-primary mt-2 mb-2 text-lg font-semibold ">
										{item.title}
									</h3>
									<p class="description text-sm">{item.description}</p>
								</div>
							))
						}
					</div>
				</div>
				<div class="order-1 lg:order-2">
					<div class="relative" data-aos="fade-left" data-aos-trigger="#about">
						<div
							class="from-primary/20 to-primary/5 absolute inset-0 rotate-6 transform rounded-2xl bg-gradient-to-tr"
						>
						</div>
						<div class="relative">
							<Image
								src={authorImage}
								alt="Designer"
								class="aspect-square w-full rounded-2xl object-cover shadow-2xl"
							/>
						</div>
						<div class="bg-primary/10 absolute -right-4 -bottom-4 h-32 w-32 rounded-full blur-2xl">
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
