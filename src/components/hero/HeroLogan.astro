---
import { getRelativeLocaleUrl } from "astro:i18n";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

// components
import Button from "@components/button/Button.astro";

// utils
import { getLocaleFromUrl } from "@js/localeUtils";
import { useTranslations } from "@js/translationUtils";

const currLocale = getLocaleFromUrl(Astro.url);
const t = useTranslations(currLocale);

import heroImage from "@/assets/images/me.png";

---


<section id="hero-gradient" class="bg-primary-950 dark:bg-base-950">
	<div
		class:list={[
			"relative flex min-h-[100svh] items-center justify-center overflow-hidden",
			"from-background via-background/95 to-primary/15 bg-gradient-to-br",
			"dark text-foreground pt-16",
		]}
	>
		<!-- Animated Background Elements -->
		<div class="absolute inset-0 overflow-hidden" aria-hidden="true">
			<div class="absolute inset-0 opacity-30">
				<div
					class="animate-blob bg-primary/30 absolute top-0 -left-4 h-72 w-72 rounded-full mix-blend-multiply blur-xl"
				>
				</div>
				<div
					class="animation-delay-2000 animate-blob absolute top-0 -right-4 h-72 w-72 rounded-full bg-purple-300 mix-blend-multiply blur-xl dark:bg-purple-900"
				>
				</div>
				<div
					class="animation-delay-4000 animate-blob absolute -bottom-8 left-20 h-72 w-72 rounded-full bg-pink-300 mix-blend-multiply blur-xl dark:bg-pink-900"
				>
				</div>

				<!-- from-primary/50 to-primary-300/50 -->
			</div>
		</div>

		<!-- Main Content -->
        <div class="container relative h-full">
            <div class="grid h-full items-center gap-12 py-24 lg:grid-cols-12">
                <!-- Left Content -->
                <div class="space-y-8 lg:col-span-6">
					<h1
						class:list={[
							"font-heading mb-6 text-5xl md:text-7xl",
							"from-primary bg-gradient-to-r via-purple-500 to-primary bg-clip-text text-transparent",
							"dark:from-primary dark:via-purple-400 dark:to-primary",
						]}
						data-aos="fade-up"
						data-aos-trigger="#hero-gradient"
						data-aos-duration="1.2"
					>
						{t("hero_text")}
					</h1>
					<p
						class="text-base-400 mb-12 text-xl text-pretty"
						data-aos="fade-in"
						data-aos-delay="1"
						data-aos-trigger="#hero-gradient"
						data-aos-duration="1.2"
					>
						{t("hero_description")}
					</p>
    
                    <div
                        class="flex flex-col gap-4 sm:flex-row"
                        data-aos="fade-right"
                        data-aos-delay="0.4"
                        data-aos-trigger="#hero-gradient"
                    >
                        <Button href={t("link_cv")} download={t("link_cv")} variant="primary">
                            <div class="flex items-center gap-2">
                                <span>{t("download_cv")}</span>
                                <Icon name="tabler/download" aria-hidden="true" class="size-5" />
                            </div>
                        </Button>


                        <!-- <Button href={getRelativeLocaleUrl(currLocale, `/projects`)} variant="ghost"> -->
                        <Button href="#contact" variant="ghost">
                            {t("contact_me")}
                        </Button>
                    </div>
                </div>
    
                <!-- Right Content -->
                <div class="relative lg:col-span-6">
                    <div class="relative mx-auto aspect-square max-w-2xl">
                        <!-- Geometric Overlay -->
                        <div
                            class="from-primary/20 absolute inset-0 rounded-full bg-gradient-to-br to-transparent blur-3xl"
                        >
                        </div>
    
                        <!-- Main Image Container -->
                        <div class="relative h-full">
                            <!-- <div class="absolute inset-0 bg-gradient-to-t from-background/80 to-transparent z-10"></div> -->
                            <div class="animate-float h-full overflow-hidden rounded-2xl">
                                <Image
                                    src={heroImage}
                                    alt="Creative workspace showcasing design and development environment"
                                    class="z-10 h-full w-full object-cover"
                                    quality={90}
                                    format="webp"
                                    loading="eager"
                                />
                            </div>
                        </div>
    
                        <!-- Decorative Element -->
                        <div
                            class="bg-primary/20 absolute -bottom-4 -left-4 h-32 w-32 animate-pulse rounded-full blur-xl"
                        >
                        </div>
                    </div>
                </div>
            </div>
        </div>


	</div>
</section>

<style>
	@keyframes blob {
		0% {
			transform: translate(0, 0) scale(1);
		}
		33% {
			transform: translate(30px, -50px) scale(1.1);
		}
		66% {
			transform: translate(-20px, 20px) scale(0.9);
		}
		100% {
			transform: translate(0, 0) scale(1);
		}
	}

	.animate-blob {
		animation: blob 7s infinite;
	}

	.animation-delay-2000 {
		animation-delay: 2s;
	}

	.animation-delay-4000 {
		animation-delay: 4s;
	}
</style>
