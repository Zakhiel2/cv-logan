---
import Experience from './Experience.astro';
import Education from './Education.astro';
import Certifications from './Certifications.astro';
import Languages from './Languages.astro';
import HardSkills from './HardSkills.astro';
import SoftSkills from './SoftSkills.astro';
import ToolsKnown from './ToolsKnown.astro';
---

<section class="container mx-auto max-w-8xl mb-20 pt-16 md:pt-32">
  <div class="flex flex-col xl:flex-row gap-6 sm:gap-8">
    <div class="xl:w-2/3">
      <Experience />
    </div>
    <div class="xl:w-1/3">
      <div class="xl:sticky xl:pt-12 xl:top-6 space-y-6 sm:space-y-8">
        <Education />
        <Certifications />
        <Languages />
      </div>
    </div>
  </div>
  <div class="mt-6 sm:mt-8 grid grid-cols-1 lg:grid-cols-2 gap-6">
    <HardSkills />
    <SoftSkills />
  </div>
  <div class="mt-6 sm:mt-8">
    <ToolsKnown />
  </div>
</section>