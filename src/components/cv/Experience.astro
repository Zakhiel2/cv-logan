---
import { experiences } from '@/data/experience';
---

<section id="experience" class="">
  <h2 class="h2 mb-4">Professional Experience</h2>
  
  <div class="hover:border-primary/30 hover:shadow-primary/5 dark:bg-base-900 rounded-lg border bg-white p-6 transition-all hover:shadow-lg space-y-8">
    {experiences.map((experience, index) => (
      <div class={index !== 0 ? "pt-8 border-t border-gray-200 dark:border-gray-700" : ""}>
        <div class="flex flex-col sm:flex-row justify-between gap-6 mb-8">
          <div class="flex flex-col sm:flex-row sm:items-center gap-6">
            <img 
              src={experience.logo} 
              alt={experience.company}
              class="w-16 h-16 sm:w-20 sm:h-20"
            />
            <div>
              <h3 class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-white">
                {experience.position}
              </h3>
              <div class="flex flex-wrap items-center gap-3 mt-2">
                <a 
                  href={experience.website}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-base sm:text-lg font-medium text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 "
                >
                  {experience.company}
                </a>
                <span class="text-gray-600 dark:text-gray-400">{experience.period}</span>
                <span class="inline-flex items-center px-3 py-1.5 rounded-full text-xs sm:text-sm font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-100">{experience.workMode}</span>                  
              </div>
            </div>
          </div>
          <div class="flex gap-4 sm:self-start">
            <a
              href={experience.website}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-700 dark:text-white p-2 rounded-full bg-gray-100 dark:bg-gray-700 hover:bg-blue-100 dark:hover:bg-blue-900 hover:text-blue-600 dark:hover:text-blue-400 "
              title="Website"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
              </svg>
            </a>
            <a
              href={experience.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-700 dark:text-white p-2 rounded-full bg-gray-100 dark:bg-gray-700 hover:bg-blue-100 dark:hover:bg-blue-900 hover:text-blue-600 dark:hover:text-blue-400 "
              title="LinkedIn"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            </a>
          </div>
        </div>

        <div class="space-y-6">
          {experience.description.map(({ text, items }) => (
            <div>
              <h4 class="text-base sm:text-lg font-semibold text-gray-900 dark:text-white mb-4">{text}</h4>
              {items && (
                <ul class="space-y-3 ml-4">
                  {items.map((item) => (
                    <li class="flex items-start space-x-3">
                      <span class="mt-2 w-1.5 h-1.5 bg-blue-500 rounded-full flex-shrink-0"></span>
                      <span class="text-sm sm:text-base text-gray-600 dark:text-gray-300">{item}</span>
                    </li>
                  ))}
                </ul>
              )}
            </div>
          ))}
        </div>

        <div class="mt-8">
          <h4 class="text-base sm:text-lg font-semibold text-gray-900 dark:text-white mb-4">Core Skills</h4>
          <div class="flex flex-wrap gap-3">
            {experience.skills.map((skill) => (
              <span class="px-3 py-1.5 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-full text-xs sm:text-sm font-medium">
                {skill}
              </span>
            ))}
          </div>
        </div>

        <div class="mt-8">
          <h4 class="text-base sm:text-lg font-semibold text-gray-900 dark:text-white mb-4">Technologies</h4>
          <div class="flex flex-wrap gap-3">
            {experience.technologies.map(({ name, icon, url }) => (
              <a
                href={url}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center px-4 py-2 bg-gray-50 dark:bg-gray-900 rounded-lg text-xs sm:text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 "
              >
                <img src={icon} alt={name} class="w-4 h-4 sm:w-5 sm:h-5 mr-2" />
                {name}
              </a>
            ))}
          </div>
        </div>
      </div>
    ))}
  </div>
</section>