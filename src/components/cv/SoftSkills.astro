---
import { softSkills } from '@/data/softSkills';
---

<section class="p-4 sm:p-6">
  <h2 class="h2 mb-4">Soft Skills</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 sm:gap-4">
    {softSkills.map(skill => (
      <div class="group hover:border-primary/30 hover:shadow-primary/5 dark:bg-base-900 rounded-lg border bg-white transition-all hover:shadow-lg p-4 sm:p-5 shadow-lg hover:shadow-xl hover:-translate-y-1">
        <div class="flex items-center gap-2 sm:gap-3 mb-2 sm:mb-3">
          <span 
            class="text-xl sm:text-2xl group-hover:scale-110 transition-transform duration-300" 
            role="img" 
            aria-label={skill.name}
          >
            {skill.icon}
          </span>
          <span class="text-sm sm:text-base md:text-lg font-semibold text-gray-800 dark:text-gray-200 group-hover:text-blue-600 dark:group-hover:text-blue-400 ">
            {skill.name}
          </span>
        </div>
        <p class="text-base text-gray-600 dark:text-gray-400 mt-1 sm:mt-2 leading-relaxed">
          {skill.description}
        </p>
      </div>
    ))}
  </div>
</section>